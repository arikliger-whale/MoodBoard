# MoodB Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# ============================================
# DATABASE (MongoDB Atlas - Production Only)
# ============================================
# Single production database - no local/dev databases
# Get connection string from MongoDB Atlas Dashboard
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/moodb?retryWrites=true&w=majority"

# ============================================
# AUTHENTICATION (NextAuth.js)
# ============================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================
# STORAGE (Cloudflare R2)
# ============================================
R2_ACCOUNT_ID="your_cloudflare_account_id"
R2_ACCESS_KEY_ID="your_r2_access_key"
R2_SECRET_ACCESS_KEY="your_r2_secret_key"
R2_BUCKET_NAME="moodb-assets"
R2_PUBLIC_URL="https://assets.moodb.com"

# ============================================
# CDN (Cloudflare)
# ============================================
CLOUDFLARE_ZONE_ID="your_zone_id"
CLOUDFLARE_API_TOKEN="your_api_token"

# ============================================
# SEARCH (Meilisearch)
# ============================================
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_MASTER_KEY="your_master_key"

# ============================================
# CACHE (Upstash Redis)
# ============================================
UPSTASH_REDIS_REST_URL="your_redis_url"
UPSTASH_REDIS_REST_TOKEN="your_redis_token"

# ============================================
# MONITORING & ANALYTICS
# ============================================
# Sentry
NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn"
SENTRY_AUTH_TOKEN="your_sentry_auth_token"
SENTRY_ORG="your_org"
SENTRY_PROJECT="moodb"

# PostHog
NEXT_PUBLIC_POSTHOG_KEY="your_posthog_key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# Logtail
LOGTAIL_SOURCE_TOKEN="your_logtail_token"

# ============================================
# SECURITY
# ============================================
# Cloudflare Turnstile
NEXT_PUBLIC_TURNSTILE_SITE_KEY="your_turnstile_site_key"
TURNSTILE_SECRET_KEY="your_turnstile_secret_key"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW="1m"

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Brand Colors (MoodB)
NEXT_PUBLIC_BRAND_BACKGROUND="#f7f7ed"
NEXT_PUBLIC_BRAND_PRIMARY="#df2538"
NEXT_PUBLIC_BRAND_TEXT="#000000"
NEXT_PUBLIC_BRAND_TEXT_INVERSE="#ffffff"

# Default Locale
NEXT_PUBLIC_DEFAULT_LOCALE="he"

# ============================================
# WEBHOOKS
# ============================================
WEBHOOK_SECRET="your_webhook_secret"

# ============================================
# PAYMENTS (Optional - for future)
# ============================================
# STRIPE_SECRET_KEY="sk_test_your_stripe_key"
# STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_key"
